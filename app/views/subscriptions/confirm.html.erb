<div class="container">
  <div class="row d-flex justify-content-center">
    <h5>サブスク情報確認</h5>
    <%= @subscription.trainer.name %>
    <%= @subscription.subscription_plan.plan %>
    <%= @subscription.payment.payment_method %>
    <%= @subscription.period %>ヶ月
    <%= @subscription.subtotal %>円
  </div>
  <div>
    <div>
      <%= form_with model: @subscription, url: subscriptions_path, method: :post, local:true do |f| %>
        <%= f.hidden_field :subscription_plan_id %>
        <%= f.hidden_field :payment_id %>
        <%= f.hidden_field :period %>
        <%= f.hidden_field :trainer_id %>
        <%= f.submit 'サブスクを確定する' %>
      <% end %>
    </div>
    <div>
      <p><%= link_to "情報入力画面へ戻る", subscriptions_new_path(@subscription.trainer_id) %></p>
    </div>
  </div>
</div>
