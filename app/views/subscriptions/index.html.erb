<div class="container">
  <div class="row">
    <div class="border border-dark my-5 p-2">
      <h4>サブスク会員一覧</h4>
    </div>
  </div>
  
  <div class="row">
      <table class="table table-bordered">
        <thead class="thead_trainer">
          <tr>
            <th>氏名</th>
            <th>サブスクプラン</th>
            <th>契約日</th>
          </tr>
        </thead>
        
        <tbody>
        <% @subscriptions.each do |subscription| %>
          <tr>
            <td><%= subscription.member.name %></td>
            <td><%= subscription.subscription_plan.plan %></td>
            <td><%= subscription.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
        </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>