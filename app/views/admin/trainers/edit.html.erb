<div class="container">
  <h4 class="mt-3"><%= @trainer.name %>さんの会員情報編集</h4>
    <%= form_with model: @trainer, url: admin_trainer_path, local:true do |f| %>
      <div class="row mt-5 d-flex justify-content-center">
        <div class="col-sm-3">
          <p>トレーナーID</p>
          <p>氏名</p>
          <p>ユーザーネーム</p>
          <p>電話番号</p>
          <p>メールアドレス</p>
          <p>会員ステータス</p>
        </div>

        <div class="col-sm-2">
          <p><%= @trainer.id %></p>
          <p><%= f.text_field :name %></p>
          <p><%= f.text_field :user_name %></p>
          <p><%= f.text_field :telephone_number %></p>
          <p><%= f.text_field :email %></p>
          <p><%= f.radio_button :is_delete, false %>有効 <%= f.radio_button :is_delete, true %>退会</p>
        </div>
      </div>

      <div class="row">
        <div class="offset-5 col-sm-5 mt-3">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
</div>
