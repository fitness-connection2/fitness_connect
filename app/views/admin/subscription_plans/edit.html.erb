<div class="container">
  <div class="row">
    <div class="border border-dark my-5 p-1">
      <h4>サブスク編集</h4>
    </div>
  </div>

    <% if @subscription_plan.errors.any? %>
      <%= @subscription_plan.errors.count %>件のエラーが発生しました
      <ul>
        <% @subscription_plan.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

  <%= form_with model: @subscription_plan, url: admin_subscription_plan_path, local:true do |f| %>
  <div class="row d-flex justify-content-center">
    <div class="col-sm-2">
      <p><%= f.label :サブスクプラン %></p>
      <p><%=f.label :価格 %></p>
    </div>
    <div>
      <p><%= f.text_field :plan %></p>
      <p><%= f.text_field :price %> 円</p>
    </div>
  </div>

  <div class="row mt-3 d-flex justify-content-center">
    <div>
      <%= f.submit '変更を保存', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
