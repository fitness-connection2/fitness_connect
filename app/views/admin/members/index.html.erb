<div class="container">
	<div class="row">
		<div class="border border-dark my-5 p-2">
  		<h4>会員一覧</h4>
		</div>
	</div>

	<div class="row">
		<table class="table table-bordered">
			<thead class="thead_member">
				<tr>
					<th>会員ID</th>
					<th>氏名</th>
					<th>ユーザーネーム</th>
					<th>ステータス</th>
				</tr>
			</thead>

			<tboady>
				<% @members.each do |member| %>
					<tr>
						<td><%= member.id %></td>
		  			<td><%= link_to member.name, admin_member_path(member.id) %></td>
		  			<td><%= member.user_name %></td>
		    		<% if member.is_delete %>
        			<td>退会</td>
        		<% else %>
        			<td>有効</td>
        		<% end %>
    			</tr>
    		<% end %>
			</tbody>
		</table>
	</div>
</div>