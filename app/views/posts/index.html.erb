<div>
<% @posts.each do |post| %>
  <div>
    <% if post.member_id.present? %> <!--投稿の投稿主が会員場合-->
    　<%= link_to member_path(post.member) do %>
        <%= image_tag post.member.get_profile_image(100,100) %>
    　<% end %>
      <%= post.member.user_name %>
    <% elsif post.trainer_id.present? %> <!--投稿の投稿主がトレーナー場合-->
      <%= link_to trainer_path(post.trainer) do %>
        <%= image_tag post.trainer.get_profile_image(100,100) %>
      <% end %>
      <%= post.trainer.user_name %>
    <% end %>
  </div>
  <%= link_to post_path(post.id) do %>
    <%= image_tag post.get_image(100, 100) %>
  <% end %>
  <p>投稿内容：<%= simple_format(post.description) %></p>
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
  <p>投稿日：<%= post.created_at.strftime('%Y/%m/%d') %></p>
<% end %>
</div>