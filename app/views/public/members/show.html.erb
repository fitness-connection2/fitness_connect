<div>
  <div class="row d-flex justify-content-center member_first_line">
    <div><%= image_tag @member.get_profile_image(100,100), class: "rounded-circle" %></div>
    <div class="pt-4 ml-3"><%= @member.user_name %></div>
      <div><%= @member.follower_count %></div>
      <div id="padding">フォロワー</div>
    </div>
      <div><%= @member.following_count %></div>
      <div id="padding">フォロー中</div>
    </div>
    <div class="pt-4 col-sm-2"><%= @member.posts.count %>
      <div id="padding">投稿数</div>
    </div>
    <% if @member == current_member %>
      <div class="mt-3">
        <%= link_to "プロフィール編集", edit_member_path(@member) %>
        <div class="mt-3"><%= link_to "いいね一覧", post_likes_member_path %></div>
      </div>
    <% end %>
  </div>

  <div class="row d-flex justify-content-center member_second_line">
  　<div>
      <p><strong>氏名</strong></p>
      <p><strong>自己紹介</strong></p>
    </div>

    <div class="offset-1">
      <p><%= @member.name %></p>
      <p><%= @member.introduction %></p>
    </div>
  </div>

  <div class="row mt-5 d-flex justify-content-center">
    <% if current_member %>
      <% if current_trainer != @trainer %>
        <% if current_member.following?(@member, 1 ) %>
          <%= link_to "フォロー外す", trainer_relationships_path(@member.id, target: 1), method: :delete %>
        <% else %>
          <%= link_to "フォローする", trainer_relationships_path(@member.id, target: 1), method: :post %>
        <% end %>
      <%end%>

    <%else%>

        <% if current_trainer.following?(@trainer.id) %>
          <%= link_to "フォロー外す", trainer_relationships_path(@trainer.id, target: 0), method: :delete %>
        <% else %>
          <%= link_to "フォローする", trainer_relationships_path(@trainer.id, target: 0), method: :post %>
        <% end %>

    <%end%>

    <% if @subscription.present? %>
      <% if member_signed_in? && current_member == @member %>
        <div><%= link_to "サブスク詳細", subscription_path %></div>
      <% end %>
    <% end %>
  </div>

  <div class="row mt-5 d-flex justify-content-center">
  <% @posts.each do |post| %>
    <div>
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.get_image(100,100) %>
      <% end %>
    </div>
  <% end %>
  </div>
</div>