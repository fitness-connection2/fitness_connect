<div>
  <div class="row d-flex justify-content-center member_first_line">
    <div><%= image_tag @member.get_profile_image(100,100), class: "rounded-circle" %></div>
      <div class="pt-4 ml-3"><%= @member.user_name %></div>
      <div class="pt-4 col-sm-2">
        <%= @member.follower_count %>
        <%#binding.pry%>
        <div id="padding"><%= link_to "フォロワー", member_followers_path(member_id: @member) %></div>
      </div>
      <div class="pt-4 col-sm-2">
        <%#binding.pry %>
        <%# if current_trainer %>
          <%#= @member.member_following_count %>
        <%# else %>
          <%= @member.following_count %>
        <%# end %>
        <div id="padding"><%= link_to "フォロー中", member_followings_path(member_id: @member) %></div>
      </div>
      <div class="pt-4 col-sm-2">
        <%= @member.posts.count %>
        <div id="padding">投稿数</div>
      </div>
    <% if @member == current_member %>
      <div class="mt-3">
        <%= link_to "プロフィール編集", edit_member_path(@member) %>
        <div class="mt-3"><%= link_to "いいね一覧", post_likes_member_path %></div>
      </div>
    <% end %>
  </div>

  <div class="row d-flex justify-content-center member_second_line">
  　<div>
      <p><strong>氏名</strong></p>
      <p><strong>自己紹介</strong></p>
    </div>

    <div class="offset-1">
      <p><%= @member.name %></p>
      <p><%= @member.introduction %></p>
    </div>
  </div>

  <div class="row mt-5 d-flex justify-content-center">
    <%#binding.pry%>
    <% if current_member %>
      <% if current_member != @member %>
        <% if current_member.following?(@member, 1 ) %>
          <%= link_to "会員のフォロー外す", member_relationships_path(@member.id, target: 1), method: :delete, class: "btn btn-primary mr-5" %>
        <% else %>
          <%= link_to "会員のフォローする", member_relationships_path(@member.id, target: 1), method: :post, class: "btn btn-primary mr-5" %>
        <% end %>
      <% end %>
    <% else %>
      <%#binding.pry%>
      <% if current_trainer && @member.present? %>
        <% if current_trainer.following?(@member, 1 ) %>
          <%= link_to "会員のフォロー外す", member_relationships_path(@member.id, target: 1), method: :delete, class: "btn btn-primary mr-5" %>
        <% else %>
          <%= link_to "会員のフォローする", member_relationships_path(@member.id, target: 1), method: :post, class: "btn btn-primary mr-5" %>
        <% end %>
      <% end %>
    <% end %>

    <% if @subscription.present? %>
      <% if member_signed_in? && current_member == @member %>
        <div><%= link_to "サブスク詳細", subscription_path, class: "btn btn-warning" %></div>
      <% end %>
    <% end %>
  </div>

  <div class="row mt-5 d-flex justify-content-center">
    <div class="post_images">
      <% @posts.each do |post| %>
        <div>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image(300,300) %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>