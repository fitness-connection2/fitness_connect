<div class="container">
  <div class="row mt-5 d-flex justify-content-center">
    <div>
      <%= image_tag "logo.jpg", size: '300x300' %>
    </div>
  </div>

  <div class="row mt-2 d-flex justify-content-center">
    <h4 class="mx-5 mt-4">新規会員登録</h4>
  </div>

  <div class="row mt-3 d-flex justify-content-center">
    <%= form_with model: @member, url: member_registration_path do |f| %>
    <%= render "public/members/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
    </div>

    <div class="field mt-1">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6文字以上)"  %>
      <% if @minimum_password_length %>
      <% end %><br />
    </div>

    <div class="field mt-1">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認" %>
    </div>

    <div class="field">
      <%= f.text_field :name, autofocus: true, placeholder: "フルネーム" %>
    </div>

    <div class="field mt-1">
      <%= f.text_field :user_name, autofocus: true, placeholder: "ユーザーネーム" %>
    </div>

    <div class="field mt-1">
      <%= f.text_field :telephone_number, autofocus: true, placeholder: "電話番号"  %>
    </div>

    <div class="actions mt-2">
      <%= f.submit "新規登録", class: "btn btn-primary actionsMember" %>
    </div>
    <% end %>
  </div>

  <div class="row mt-4 d-flex justify-content-center">
    <p class="memberLogin">
      会員アカウントをお持ちの方は <%= render "public/members/shared/links" %></br>
      トレーナーの方ですか？ <%= link_to "ログイン", new_trainer_session_path %> 又は <%= link_to "新規トレーナー登録", new_trainer_registration_path %>
    </p>
  </div>
</div>