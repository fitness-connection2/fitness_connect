<h2>会員用ログイン</h2>

<%= flash[:alert] %>

<%= form_with model: @member, url: member_session_path do |f| %>
  <div>
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div>
    <%= f.submit "ログイン" %>
  </div>
<% end %>
<div>
  アカウントをお持ちでない方は<%= render "public/members/shared/links" %>
</div>
<div>
  トレーナーの方ですか？<%= link_to "トレーナーログイン", new_trainer_session_path %>
</div>