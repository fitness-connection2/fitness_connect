<div class="container">
  <div class="row mt-5 d-flex justify-content-center">
    <div>
      <%= image_tag "logo.jpg", size: '300x300' %>
    </div>
  </div>

  <div class="row mt-4 d-flex justify-content-center">
    <h4>会員用ログイン</h4>
  </div>

  <div class="row mt-4 d-flex justify-content-center">
    <%= flash[:alert] %>
  </div>

  <div class="row mt-3 d-flex justify-content-center">
    <%= form_with model: @member, url: member_session_path do |f| %>

    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
    </div>

    <div class="mt-2">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="my-2">
        <%= f.check_box :remember_me %>
        <%= f.label :ログイン情報を保持する %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary actionsMember" %>
    </div>
  <% end %>
  </div>

  <div class="row mt-4 d-flex justify-content-center">
    <div>
      <p>ゲストログインはこちら <%= link_to "ゲストログイン", posts_path %></br></p>
      アカウントをお持ちでない方は<%= render "public/members/shared/links" %></br>
      トレーナーの方ですか？<%= link_to "トレーナーログイン", new_trainer_session_path %></p>
    </div>
  </div>
</div>