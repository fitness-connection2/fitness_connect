<div class="container">
  <div class="my-4 row">
    <h4>トレーナー情報編集</h4>
  </div>

  <%= form_with model: @trainer do |f| %>
  <div class="row d-flex justify-content-center">
    <div class="col-sm-4 mt-1">
      <p>アイコン画像</p>
      <p class="mt-3">氏名</p>
      <p class="mt-4">ユーザーネーム</p>
      <p class="mt-4">電話番号</p>
      <p class="mt-4">メールアドレス</p>
      <p class="mt-4">自己紹介</p>
    </div>

    <div class="col-sm-4">
      <p><%= f.file_field :profile_image, placeholder: "アイコン画像", accept: "image/*" %></p>
      <p><%= f.text_field :name, autofocus: true, placeholder:"名前"%></p>
      <p><%= f.text_field :user_name, autofocus: true, placeholder:"ユーザーネーム"%></p>
      <p><%= f.text_field :telephone_number %></p>
      <p><%= f.text_field :email %></p>
      <p><%= f.text_area :introduction %></p>
    </div>
  </div>

  <div class="mt-5 row justify-content-center">
    <div class="col-sm-4">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
    <div>
      <%= link_to "退会する", trainers_confirm_path, class: "btn btn-danger" %>
    </div>
  </div>
  <% end %>
</div>
