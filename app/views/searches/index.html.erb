<h2>Search --> <%= params[:keyword].blank? ? '条件なし' : params[:keyword] %></h2> <!--検索結果が空の場合は条件なし、それ以外はビューを表示-->
<% @posts.each do |post| %>
  <%= post.description %>
  <%= image_tag post.get_image(100,100) %>
<% end %>

<% @members.each do |member| %>
  <%= link_to member_path(member.id) do %>
    <%= image_tag member.get_profile_image(100,100) %>
  <% end %>
  <%= member.user_name %>
<% end %>

<% @trainers.each do |trainer| %>
  <%= link_to trainer_path(trainer.id) do %>
    <%= image_tag trainer.get_profile_image(100,100) %>
  <% end %>
  <%= trainer.user_name %>
<% end %>